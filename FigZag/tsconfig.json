{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/types/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "include": [
    "src/**/*",
    "code.ts",
    "ui.html"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
